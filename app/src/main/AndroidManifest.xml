<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viit.cakeshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CakeShop"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.viit.cakeshop.Cakes"
            android:exported="false" />
        <activity
            android:name="com.viit.cakeshop.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.viit.cakeshop.ThemeActivity"
            android:exported="true" />
        <activity
            android:name="com.viit.cakeshop.SummaryActivity"
            android:exported="true" />
        <activity
            android:name="com.viit.cakeshop.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>